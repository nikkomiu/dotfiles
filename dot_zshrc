# Update path variable to include extra paths
export PATH=$PATH:$HOME/.bin:$HOME/.go/bin

# Set Go variables
export GOPATH=$HOME/.go

# Set the editor
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR=vim
else
  export EDITOR="code --wait"
fi

# Disable the Host part of the prompt
export DEFAULT_USER=$USER

# Set up rbenv
eval "$(rbenv init -)"

# Set the default Vault server address
export VAULT_ADDR=https://vault.0.miu.guru

# Auto update oh my zsh
export DISABLE_UPDATE_PROMPT=true

# Create an alias to 'open' to emulate the macOS open command
alias open=xdg-open

# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Set name of the theme to load
ZSH_THEME="agnoster"

# Which plugins would you like to load?
# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git)

source $ZSH/oh-my-zsh.sh

autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C /usr/local/bin/vault vault

# pnpm
export PNPM_HOME="/home/nikkomiu/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/nikkomiu/.anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/nikkomiu/.anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/nikkomiu/.anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/nikkomiu/.anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

